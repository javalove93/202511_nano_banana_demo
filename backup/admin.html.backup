<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Account Management</title>
    <style>
        body { font-family: sans-serif; margin: 2em; }
        table { width: 100%; border-collapse: collapse; }
        th, td { border: 1px solid #ddd; padding: 8px; text-align: left; }
        th { background-color: #f2f2f2; }
        .form-container { margin-bottom: 2em; padding: 1em; border: 1px solid #ccc; }
        .user-actions form { display: inline-block; margin-right: 5px; }
        input[type="text"], input[type="password"], input[type="date"] { padding: 5px; }
        button { padding: 5px 10px; cursor: pointer; }
    </style>
</head>
<body>
    <h1>User Account Management</h1>

    <div class="form-container">
        <h2>Add New User</h2>
        <form action="{{ url_for('admin.add_user') }}" method="post">
            <label for="user_id">User ID:</label>
            <input type="text" id="user_id" name="user_id" required>
            <label for="password">Password:</label>
            <input type="password" id="password" name="password" required>
            <label for="expiry_date">Expiry Date:</label>
            <input type="date" id="expiry_date" name="expiry_date">
            <button type="submit">Add User</button>
        </form>
    </div>

    <h2>Existing Users</h2>
    <table>
        <thead>
            <tr>
                <th>User ID</th>
                <th>Created At</th>
                <th>Expires At</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.created_at or 'N/A' }}</td>
                <td>{{ user.expires_at or 'N/A' }}</td>
                <td class="user-actions">
                    <!-- Update Password -->
                    <form action="{{ url_for('admin.update_password') }}" method="post">
                        <input type="hidden" name="user_id" value="{{ user.id }}">
                        <input type="password" name="new_password" placeholder="New Password" required>
                        <button type="submit">Update Password</button>
                    </form>
                    <!-- Update Expiry -->
                    <form action="{{ url_for('admin.update_expiry') }}" method="post">
                        <input type="hidden" name="user_id" value="{{ user.id }}">
                        <input type="date" name="expiry_date" required>
                        <button type="submit">Update Expiry</button>
                    </form>
                    <!-- Delete User -->
                    <form action="{{ url_for('admin.delete_user') }}" method="post">
                        <input type="hidden" name="user_id" value="{{ user.id }}">
                        <button type="submit" onclick="return confirm('Are you sure you want to delete this user?');">Delete</button>
                    </form>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</body>
</html>
